<% if signed_in? %>
    <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">Quoi de neuf ?</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>
<% else %>
    <h1>Ruby on Rails : Première application</h1>
    <p>A great tutorial</p>
    <%= link_to "Enregistrez-vous dès maintenant !", signup_path, :class => 'signup_button round' %>
<% end %>
