<h1>Connexion</h1>
<%= form_tag(sessions_path, :method => 'post') do  %>
  <div class="field">
    <label for="email">Email</label><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <label for="password"><%=t('activerecord.attributes.user.password') %></label><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Connexion" %>
  </div>
<% end %>

<p>Nouvel utilisateur ? <%= link_to("Enregistrez-vous !", signup_path) %></p>